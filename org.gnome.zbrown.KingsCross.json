{
    "app-id": "org.gnome.zbrown.KingsCross",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "kgx",
    "finish-args": [
        "--allow=devel",
        "--require-version=1.0.0",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=org.freedesktop.FileManager1",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "vte",
            "buildsystem": "meson",
            "build-options" : {
                "env" : {
                    "CXXFLAGS" : "-fno-exceptions"
                }
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/vte.git"
                }
            ]
        },
        {
            "name": "handy",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://source.puri.sm/Librem5/libhandy.git",
                    "branch": "libhandy-0-0"
                }
            ]
        },
        {
            "name": "kgx",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": ["-Dgtop=false", "-Dtests=true", "-Dgir=true"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/ZanderBrown/kgx"
                }
            ]
        }
    ]
}
