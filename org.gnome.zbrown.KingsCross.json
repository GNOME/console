{
    "app-id": "org.gnome.zbrown.KingsCross",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "sdk": "org.gnome.Sdk",
    "command": "kgx",
    "finish-args": [
        "--allow=devel",
        "--require-version=1.0.0",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=org.freedesktop.FileManager1",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--device=dri"
    ],
    "build-options": {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "vte",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/vte"
                }
            ]
        },
        {
            "name": "kgx",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": ["-Dgtop=false"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/ZanderBrown/kgx"
                }
            ]
        }
    ]
}
