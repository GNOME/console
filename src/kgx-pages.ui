<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  <template class="KgxPages" parent="GtkOverlay">
    <property name="visible">True</property>
    <child>
      <object class="GtkNotebook" id="notebook">
        <property name="expand">True</property>
        <property name="visible">True</property>
        <property name="show-tabs">True</property>
        <property name="show-border">False</property>
        <signal name="switch-page" handler="page_changed" swapped="no"/>
        <signal name="page-added" handler="page_added" swapped="no"/>
        <signal name="page-removed" handler="page_removed" swapped="no"/>
      </object>
    </child>
    <child type="overlay">
      <object class="GtkLabel" id="status">
        <property name="halign">end</property>
        <property name="valign">end</property>
        <property name="label">WxH</property>
        <style>
          <class name="floating-bar"/>
        </style>
      </object>
    </child>
  </template>
</interface>
